<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
            android:dither="true">

            <corners android:radius="4dp"/>

            <solid android:color="#39ACE6" />
            <!--#79C2EA-->
        </shape>
    </item>

    <item android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle"
            android:dither="true">

            <corners android:radius="4dp" />

            <solid android:color="#39ACE6" />

        </shape>
    </item>
</layer-list>