<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/globalWallNewPostTitle"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:hint="@string/postTitle"
                        android:inputType="text"
                        android:gravity="top"
                        android:layout_margin="8dp"
                        android:padding="10dp"
                        android:background="@drawable/button_rounded_shape_gray"/>

                    <Spinner
                        android:id="@+id/globalWallCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:entries="@array/globalInfoCategories"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:prompt="@string/selectCategory"
                        android:spinnerMode="dialog"
                        android:background="@drawable/button_rounded_shape_gray"
                        android:layout_below="@id/globalWallNewPostTitle"/>

                    <EditText
                        android:id="@+id/globalWallNewPostDescription"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:hint="@string/postKnowledgeDescriptionHint"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:padding="10dp"
                        android:background="@drawable/button_rounded_shape_gray"
                        android:layout_below="@+id/globalWallCategory"/>

                    <EditText
                        android:id="@+id/globalWallNewPostLink"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:hint="@string/link"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:padding="10dp"
                        android:background="@drawable/button_rounded_shape_gray"
                        android:layout_below="@+id/globalWallNewPostDescription"/>
<!--
                    <ImageView
                        android:id="@+id/globalWallSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_camera"
                        android:layout_below="@+id/globalWallNewPostDescription"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_rounded_shape_gray"/>-->

                    </RelativeLayout>

                </ScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/appBlue">

                <TextView
                    android:id="@+id/sendPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <TextView
                    android:id="@+id/cancelPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_alignParentLeft="true"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>