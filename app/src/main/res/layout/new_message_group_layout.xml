<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <EditText
                android:id="@+id/groupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:textSize="14sp"
                android:padding="10sp"
                android:layout_margin="8dp"
                android:hint="@string/groupName"
                android:background="@drawable/button_rounded_shape_gray"/>

            <ImageView
                android:id="@+id/searchNameBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/card_background"
                android:layout_below="@+id/groupName"
                android:layout_alignParentRight="true"/>

            <EditText
                android:id="@+id/searchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:textSize="14sp"
                android:padding="12sp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:hint="@string/searchContact"
                android:drawableLeft="@drawable/ic_user_profile"
                android:drawablePadding="10dp"
                android:layout_below="@+id/groupName"
                android:layout_toLeftOf="@+id/searchNameBtn"
                android:background="@drawable/button_rounded_shape_gray"/>

            <ListView
                android:id="@+id/searchListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0.2dp"
                android:divider="@color/lightGray"
                android:padding="10sp"
                android:focusable="false"
                android:layout_below="@+id/searchName"/>

            <ListView
                android:id="@+id/selectedListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0.2dp"
                android:divider="@color/lightGray"
                android:padding="10sp"
                android:focusable="false"
                android:layout_below="@+id/searchName"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/searchProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/searchProgress"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/lightLightGray"
                android:layout_below="@+id/searchName"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>