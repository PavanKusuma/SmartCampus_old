<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homecard_background"
        android:layout_margin="4dp"
        android:weightSum="2"
        android:elevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
<!--
        <ImageView
            android:id="@+id/globalPostShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>-->

        <TextView
            android:id="@+id/globalPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/futureText"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/blackText"
            android:padding="4dp"/>



        <TextView
            android:id="@+id/globalPostDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/blackText"
            android:paddingLeft="4dp"
            android:paddingBottom="8dp"
            android:layout_below="@+id/globalPostTitle"/>



        <TextView
            android:id="@+id/globalPostCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="10dp"
            android:textColor="@color/blackText"
            android:paddingLeft="4dp"
            android:paddingBottom="4dp"
            android:layout_below="@+id/globalPostDescription"/>



        <ImageView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_link"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:layout_below="@+id/globalPostDescription"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

    </RelativeLayout>

