<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--
        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
-->

        <RelativeLayout
            android:id="@+id/knowledgeWall"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:id="@+id/knowledgeWallProgressBar"
                style="?android:attr/progressBarStyleSmallTitle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:indeterminate="false"
                android:max="100"
                android:paddingRight="10dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/knowledgeWallProgressBar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cseDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hashCse"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlue"
                        android:layout_margin="10dp"/>

                    <HorizontalScrollView
                        android:id="@+id/cseKnowledge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/cseDept">

                        <LinearLayout
                            android:id="@+id/cseKnowledgeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>


                    <TextView
                        android:id="@+id/eceDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hashEce"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlue"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/cseKnowledge"/>

                    <HorizontalScrollView
                        android:id="@+id/eceKnowledge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/eceDept"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/eceKnowledgeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>


                    <TextView
                        android:id="@+id/eeeDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hashEee"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlue"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/eceKnowledge"/>

                    <HorizontalScrollView
                        android:id="@+id/eeeKnowledge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/eeeDept"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/eeeKnowledgeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/mechDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hashMech"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlue"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/eeeKnowledge"/>

                    <HorizontalScrollView
                        android:id="@+id/mechKnowledge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mechDept"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/mechKnowledgeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/civilDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hashCivil"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlue"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/mechKnowledge"/>

                    <HorizontalScrollView
                        android:id="@+id/civilKnowledge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/civilDept"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/civilKnowledgeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/basicScienceDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hashBasicScience"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlue"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/civilKnowledge"
                        android:visibility="gone"/>

                    <HorizontalScrollView
                        android:id="@+id/basicScienceKnowledge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/basicScienceDept"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/basicScienceKnowledgeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/mbaDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hashMba"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlue"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/basicScienceKnowledge"/>

                    <HorizontalScrollView
                        android:id="@+id/mbaKnowledge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mbaDept"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/mbaKnowledgeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/mcaDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hashMca"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlue"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/mbaKnowledge"/>

                    <HorizontalScrollView
                        android:id="@+id/mcaKnowledge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mcaDept"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/mcaKnowledgeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>


                </RelativeLayout>

            </ScrollView>


            <!-- bottom bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="@color/lightLightGreen"
                android:weightSum="4"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/collegeWallView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/collegeWallIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_collegewall"
                        android:layout_gravity="center"/>

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/collegeWall"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/studentWallView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/studentWallIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_student_wall"
                        android:layout_gravity="center"/>

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/studentWall"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>-->

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/alumniWallView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/alumniWallIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_alumni_wall"
                        android:layout_gravity="center"/>

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/messages"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/moreView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/moreIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_more"
                        android:layout_gravity="center"/>

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>-->

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

</LinearLayout>
</android.support.v4.widget.DrawerLayout>