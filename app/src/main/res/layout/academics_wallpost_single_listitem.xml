<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background">

    <RelativeLayout
        android:id="@+id/academicsPostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/academicsUserImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_user_profile"
            android:scaleType="centerCrop"
            android:layout_margin="2dp"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/academicsUserImageBG"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user_image_bg"
            android:layout_margin="2dp"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/academicsUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingLeft="8dp"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/academicsUserImage"
            android:text="@string/app_name"
            android:textColor="@color/lightBlue"
            />

        <TextView
            android:id="@+id/academicsPostCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:paddingLeft="8dp"
            android:layout_margin="2dp"
            android:layout_below="@+id/academicsUserName"
            android:layout_toRightOf="@+id/academicsUserImage"
            android:text="@string/app_name"
            android:textColor="@color/lightLightGray"
            />


    </RelativeLayout>


    <TextView
        android:id="@+id/academicsPostDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:padding="8dp"
        android:layout_below="@+id/academicsPostLayout"
        android:text="@string/app_name"
        />


    <TextView
        android:id="@+id/checkAttachments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academicsPostDescription"
        android:text="@string/viewAttachments"
        android:gravity="right"
        android:padding="10dp"
        android:background="@drawable/button_rounded_shape_gray"/>

</RelativeLayout>