<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/card_background">

    <RelativeLayout
        android:id="@+id/studentWallPostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/academicsPostImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/moon"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/academicsPostImage"
                android:background="@color/white">

                <TextView
                    android:id="@+id/academicsUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:paddingLeft="8dp"
                    android:layout_margin="2dp"
                    android:text="@string/app_name"
                    android:textColor="@color/lightBlue"
                    />

                <TextView
                    android:id="@+id/academicsPostDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:paddingLeft="8dp"
                    android:layout_margin="2dp"
                    android:layout_below="@+id/academicsUserName"
                    android:text="@string/app_name"
                    android:textColor="@color/lightLightGray"
                    />

                <TextView
                    android:id="@+id/academicsCreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:text="@string/app_name"
                    />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>