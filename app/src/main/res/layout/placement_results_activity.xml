<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ProgressBar
                android:id="@+id/progressBarPlacements"
                style="?android:attr/progressBarStyleSmallTitle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:indeterminate="false"
                android:max="100"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/companyHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@color/justBlue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/company"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:padding="10sp"/>

                <TextView
                    android:id="@+id/placementYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:text="@string/company"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:padding="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/count"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:padding="10sp"/>
            </RelativeLayout>

            <ListView
                android:id="@+id/placementsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0.2dp"
                android:divider="@color/lightGray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10sp"
                android:focusable="false"
                android:layout_below="@+id/companyHeading"
                />

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>