<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/userProfileView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray">

                    <ImageView
                        android:id="@+id/profileIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_user"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/profileIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/profileTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/myProfile"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profileDetails"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/messagesView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/userProfileView">

                    <ImageView
                        android:id="@+id/messagesIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_msgs"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/messagesIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/messagesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inbox"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inboxText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/directoryView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/messagesView"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/directoryIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_directory"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/directoryIcon">
                        <TextView
                            android:id="@+id/directoryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collegeDirectory"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collegeDirectoryText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/studentDirectoryView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/directoryView"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/studentDirectoryIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_directory"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/studentDirectoryIcon">
                        <TextView
                            android:id="@+id/studentDirectoryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/studentDirectory"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/studentDirectoryText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/groupsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/studentDirectoryView">

                    <ImageView
                        android:id="@+id/groupsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_groups"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/groupsIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/groupsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/groups"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/groupDetails"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/adminPanelView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/groupsView">

                    <ImageView
                        android:id="@+id/adminPanelIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_admin_panel"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/adminPanelIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/adminPanelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/adminPanel"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/adminPanelText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/learnView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/adminPanelView">

                    <ImageView
                        android:id="@+id/learnIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_learn"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/learnIcon">
                        <TextView
                            android:id="@+id/learnTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learn"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learnText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/acadamicsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/learnView"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/acadamicsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_academics"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/acadamicsIcon">
                        <TextView
                            android:id="@+id/acadamicsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/academics"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/academicsText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/examsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/acadamicsView"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/examsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_exams"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/examsIcon">
                        <TextView
                            android:id="@+id/examsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exams"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/examsText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>


                <RelativeLayout
                android:id="@+id/complaintOrFeedbackView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/button_rounded_shape_gray"
                android:layout_below="@+id/examsView">

                    <ImageView
                        android:id="@+id/complaintIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_complaint"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/complaintIcon">
                        <TextView
                            android:id="@+id/complaintOrFeedbackTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/complaintOrFeedback"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/complaintOrFeedbackText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/placementsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/complaintOrFeedbackView">

                    <ImageView
                        android:id="@+id/placementsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_placements_new"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/placementsIcon">
                        <TextView
                            android:id="@+id/placementsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Placements"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/academicsText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/aboutCollegeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/placementsView">

                    <ImageView
                        android:id="@+id/aboutCollegeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_aboutus"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/aboutCollegeIcon">
                        <TextView
                            android:id="@+id/aboutCollegeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aboutCollege"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aboutCollege"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/aboutUsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/aboutCollegeView">

                    <ImageView
                        android:id="@+id/aboutUsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_about_app"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/aboutUsIcon">
                        <TextView
                            android:id="@+id/aboutUsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aboutApp"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aboutUsText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>







                <RelativeLayout
                    android:id="@+id/collegeMapView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/aboutUsView"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/collegeMapIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_maps"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_toRightOf="@+id/collegeMapIcon">
                        <TextView
                            android:id="@+id/collegeMapTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collegeMap"
                            android:textAppearance="@android:style/TextAppearance.Medium"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collegeMapText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>





            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
