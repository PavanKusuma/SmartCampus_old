<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grayBg">

            <!-- Here we have privileges to be assigned -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                            <!-- Here goes the individual views of the each privilege -->
                            <!-- college wall privilege view -->
                            <RelativeLayout
                                android:id="@+id/collegeWallView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:padding="4dp">


                                <CheckBox
                                    android:id="@+id/collegeWallCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/collegeWall"
                                    android:buttonTint="@color/justBlue"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- moderator privilege view -->
                            <RelativeLayout
                                android:id="@+id/moderatorView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/collegeWallView">


                                <CheckBox
                                    android:id="@+id/moderatorCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/moderator"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- complaintOrFeedback privilege view -->
                            <RelativeLayout
                                android:id="@+id/complaintOrFeedbackView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/moderatorView">


                                <CheckBox
                                    android:id="@+id/complaintOrFeedbackCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/complaintOrFeedback"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>


                            <!-- College directory -->
                            <RelativeLayout
                                android:id="@+id/collegeDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/complaintOrFeedbackView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/collegeDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/CollegeDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- Student directory -->
                            <RelativeLayout
                                android:id="@+id/studentDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/collegeDirectoryView">


                                <CheckBox
                                    android:id="@+id/studentDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/studentDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- CSE Directory -->
                            <RelativeLayout
                                android:id="@+id/cseDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/studentDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/cseDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/CSEDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- ECE Directory -->
                            <RelativeLayout
                                android:id="@+id/eceDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/cseDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/eceDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ECEDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- EEE Directory -->
                            <RelativeLayout
                                android:id="@+id/eeeDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/eceDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/eeeDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/EEEDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- IT Directory -->
                            <RelativeLayout
                                android:id="@+id/itDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/eeeDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/itDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ITDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- MECH Directory -->
                            <RelativeLayout
                                android:id="@+id/mechDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/itDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/mechDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/MECHDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- CIVIL Directory -->
                            <RelativeLayout
                                android:id="@+id/civilDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/mechDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/civilDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/CIVILDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- MBA Directory -->
                            <RelativeLayout
                                android:id="@+id/mbaDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/civilDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/mbaDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/MBADirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- MCA Directory -->
                            <RelativeLayout
                                android:id="@+id/mcaDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/mbaDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/mcaDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/MCADirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>

                            <!-- -->
                            <RelativeLayout
                                android:id="@+id/basicScienceDirectoryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:background="@drawable/button_rounded_shape_gray"
                                android:layout_below="@+id/mcaDirectoryView"
                                android:visibility="gone">


                                <CheckBox
                                    android:id="@+id/basicScienceDirectoryCheckBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/BasicScienceDirectory"
                                    android:textAppearance="@android:style/TextAppearance.Medium"
                                    android:gravity="center_vertical"
                                    android:buttonTint="@color/justBlue"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/gray"
                                    android:padding="10dp"
                                    android:layout_margin="10dp"/>

                            </RelativeLayout>



                        </RelativeLayout>

                    </ScrollView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/appBlue">

                        <TextView
                            android:id="@+id/finishBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/finish"
                            android:textStyle="bold"
                            android:layout_alignParentRight="true"
                            android:padding="14dp"
                            android:textColor="@color/white"
                            android:textAppearance="@android:style/TextAppearance.Medium"/>

                    </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
