<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/postingProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginTop="-8dp"
                android:progressTint="@color/justBlue"
                android:visibility="gone"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_below="@+id/postingProgress">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:hint="@string/postDescriptionHint"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/collegeWallPostDescription"
                        android:background="@drawable/card_background"/>

                    <ImageView
                        android:id="@+id/collegeWallSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_camera"
                        android:layout_below="@+id/collegeWallPostDescription"

                        android:background="@drawable/card_background"
                        android:layout_margin="20dp"
                        />

                </RelativeLayout>

            </ScrollView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appBlue"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/cancelPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <TextView
                    android:id="@+id/sendPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <ProgressBar
                    android:id="@+id/progressBarPosting"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/sendPost"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>