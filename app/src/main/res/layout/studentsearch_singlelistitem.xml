<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background">

    <TextView
        android:id="@+id/studentPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/studentUserImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_user_profile"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/studentUserImageViewBG"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/user_image_bg"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/userNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/studentUserImageView"
        android:layout_toLeftOf="@+id/ic_studentMsg">

        <TextView
            android:id="@+id/studentUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectUser"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="@color/blackText"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
            android:id="@+id/studentBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectUser"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/studentUserName"
            android:textColor="@color/lightLightGray"/>

        <TextView
            android:id="@+id/studentCollegeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectUser"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/studentBranch"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_studentCall"
        android:src="@drawable/ic_action_call"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_studentMsg"
        android:src="@drawable/ic_messages"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ic_studentCall"/>
</RelativeLayout>