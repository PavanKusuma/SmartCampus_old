<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/homecard_background"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/complaintUserImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/complaintUserImageBG"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/user_image_bg"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/complaintUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment"
        android:textSize="16sp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_toRightOf="@+id/complaintUserImage"
        android:textColor="@color/lightBlue"/>

    <TextView
        android:id="@+id/complaintCollegeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment"
        android:textSize="12sp"
        android:layout_below="@+id/complaintUserName"
        android:layout_toRightOf="@+id/complaintUserImage"/>

    <TextView
        android:id="@+id/complaintDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaintUserImage"
        android:text="@string/comment"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/complaintDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaintDescription"
        android:text="@string/comment"
        android:textSize="12sp"
        android:layout_alignParentRight="true"/>
<!--
    <TextView
        android:id="@+id/complaintType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaintDescription"
        android:layout_toRightOf="@+id/complaintTypeHash"
        android:text="@string/comment"
        android:textSize="12sp"/>-->

</RelativeLayout>