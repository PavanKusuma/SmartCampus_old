<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e9ebee">


            <RelativeLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/searchBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/searchBy"
                        android:padding="12dp"/>

                    <RadioGroup
                        android:id="@+id/searchTypeSelection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <RadioButton
                            android:id="@+id/radioCollegeId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collegeIdLogin"
                            android:checked="true"
                            android:tag="@string/idselected"
                            android:buttonTint="@color/justBlue"/>

                        <RadioButton
                            android:id="@+id/radioName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:tag="@string/nameselected"
                            android:buttonTint="@color/justBlue"/>

                    </RadioGroup>

                </LinearLayout>

                <ImageView
                    android:id="@+id/searchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:padding="6dp"
                    android:layout_below="@+id/searchBy"
                    android:layout_alignParentRight="true"/>

                <EditText
                    android:id="@+id/searchTerm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/searchBy"
                    android:layout_toLeftOf="@+id/searchBtn"
                    android:inputType="text"
                    android:hint="@string/enterId"
                    android:padding="12dp"
                    android:textColor="@color/blackText"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:imeOptions="actionSearch"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.9"
                    android:layout_margin="8dp">
                </EditText>

                <!--<Button
                    android:id="@+id/searchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="@string/search"
                    android:layout_gravity="center_vertical"
                    android:background="@color/green"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>-->


            </RelativeLayout>

            <ProgressBar
                android:id="@+id/searchTermProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchLayout"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:padding="10dp"/>

            <ListView
                android:id="@+id/usersListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_rounded_shape_gray"
                android:layout_below="@id/searchTermProgress"
                android:dividerHeight="8dp"
                android:divider="#e9ebee"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>