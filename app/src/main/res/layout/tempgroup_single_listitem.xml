<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="10dp">

<!--
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facultyUserImageView"
        android:src="@drawable/ic_user_profile"
        android:padding="10dp"
        android:layout_centerVertical="true"/>
-->

    <ImageView
        android:id="@+id/facultyUserImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_user_profile"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/facultyUserImageViewBG"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/user_image_bg"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_call"
        android:src="@drawable/ic_action_call"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_msg"
        android:src="@drawable/ic_messages"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ic_call"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/userName"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_toRightOf="@+id/facultyUserImageView"
        android:layout_toLeftOf="@+id/ic_msg"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:textColor="@color/lightBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/designation"
        android:layout_below="@+id/userName"
        android:layout_toRightOf="@+id/facultyUserImageView"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:textColor="@color/blackText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/department"
        android:layout_below="@+id/designation"
        android:layout_toRightOf="@+id/facultyUserImageView"
        android:paddingLeft="10dp"
        android:paddingBottom="2dp"
        />


</RelativeLayout>