<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/founderView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/button_rounded_shape_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/founder"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/chairmanView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/founderView">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/chairman"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/viceChairmanView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/chairmanView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viceChairman"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/secretaryView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/viceChairmanView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/secretary"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jointSecretaryView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/secretaryView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jointSecretary"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/principalView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/jointSecretaryView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/principal"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/vicePrincipalView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/principalView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vicePrincipal"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>