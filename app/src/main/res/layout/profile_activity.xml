<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/profilePhotoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#162066">

    <!--
            <svecw.svecw.RoundImageView
                android:id="@+id/profilePhoto2"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerInParent="true"
                android:src="@drawable/test"
                android:layout_below="@+id/branchSpinner"/>-->

            <ProgressBar
                android:id="@+id/profileProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginTop="-4dp"
                android:progressTint="@color/justBlue"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/button_rounded_shape_gray"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

                <!--android:background="@drawable/button_rounded_shape_disabled"/>-->

            <ImageView
                android:id="@+id/editProfilePhoto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/profile"
                android:clickable="true"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_create_post"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/removeProfilePhoto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/profile"
                android:clickable="true"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_clear"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profileDetails1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilePhotoLayout"
            android:background="@color/blueTransparent">
            <TextView
                android:id="@+id/profileUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/updateUserName"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:padding="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emailId"
                android:textColor="@color/white"
                android:layout_below="@+id/profileUserName"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/profilePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phoneNumber"
                android:textColor="@color/white"
                android:layout_below="@+id/profileEmail"
                android:layout_centerHorizontal="true"
                android:padding="8dp"/>


            <!--<ImageView
                android:id="@+id/editProfileDetails"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/profile"
                android:clickable="true"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_create_message"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>-->

            <ImageView
                android:id="@+id/editProfileDetails"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/profile"
                android:clickable="true"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_create_message"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <!-- Profile details -->
        <!-- This details will be visible if user is student else these will be hidden -->
        <RelativeLayout
            android:id="@+id/profileDetails2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileDetails1"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/collegeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/collegeId"
                android:textColor="@color/lightLightGray"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_rounded_shape_gray"/>

            <TextView
                android:id="@+id/profileYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yearHeading"
                android:textColor="@color/lightLightGray"
                android:layout_below="@+id/collegeId"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_rounded_shape_gray"/>

            <TextView
                android:id="@+id/profileBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/branchHeading"
                android:textColor="@color/lightLightGray"
                android:layout_below="@+id/profileYear"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_rounded_shape_gray"/>

            <TextView
                android:id="@+id/profileSemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/semesterHeading"
                android:textColor="@color/lightLightGray"
                android:layout_below="@+id/profileBranch"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/button_rounded_shape_gray"/>

            <TextView
                android:id="@+id/refreshView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fetchUpdatedPrivileges"
                android:textColor="@color/gray"
                android:layout_below="@+id/profileSemester"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/button_clickedstate"/>
            <TextView
                android:id="@+id/refreshNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fetchUpdatedPrivilegesNote"
                android:textColor="@color/lightLightRed"
                android:layout_below="@+id/refreshView"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    <!--
        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profileBranchSample"
            android:layout_below="@+id/branchHeading"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/gray"
            android:drawableLeft="@drawable/edit"
            android:drawablePadding="10dp"/>
            -->






        </RelativeLayout>

</ScrollView>
