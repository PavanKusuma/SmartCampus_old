<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar_actionbar">
        </include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/greView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray">

                    <ImageView
                        android:id="@+id/greIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_subject"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/greIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/greTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gre"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learnText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/greView">

                    <ImageView
                        android:id="@+id/adminPanelIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_subject"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/adminPanelIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/cTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/c"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learnText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cPlusPlusView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/cView">

                    <ImageView
                        android:id="@+id/cPlusPlusIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_subject"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/cPlusPlusIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/cPlusPlusTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cPlusPlus"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learnText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/javaView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/cPlusPlusView">

                    <ImageView
                        android:id="@+id/javaIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_subject"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/javaIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/adminPanelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/java"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learnText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/htmlView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/javaView">

                    <ImageView
                        android:id="@+id/htmlIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_subject"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/htmlIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/htmlTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/html"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learnText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/javaScriptView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/htmlView">

                    <ImageView
                        android:id="@+id/javaScriptIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_subject"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/javaScriptIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/javaScriptTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/JavaScript"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learnText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/androidView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/button_rounded_shape_gray"
                    android:layout_below="@+id/javaScriptView">

                    <ImageView
                        android:id="@+id/androidIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_subject"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/androidIcon"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/androidTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/android"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learnText"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"/>

                </RelativeLayout>




            </RelativeLayout>


        </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>