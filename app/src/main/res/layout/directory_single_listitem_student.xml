<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="10dp">

<!--
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facultyUserImageView"
        android:src="@drawable/ic_user_profile"
        android:padding="10dp"
        android:layout_centerVertical="true"/>
-->

    <ImageView
        android:id="@+id/studentUserImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_user_profile"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/studentUserImageViewBG"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/user_image_bg"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true" />



    <TextView
        android:id="@+id/studentUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/studentUserImageViewBG"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:textColor="@color/lightBlue"/>

    <TextView
        android:id="@+id/studentBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@+id/studentUserName"
        android:layout_toRightOf="@+id/studentUserImageViewBG"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:textColor="@color/blackText"
        />

    <TextView
        android:id="@+id/studentCollegeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@+id/studentBranch"
        android:layout_toRightOf="@+id/studentUserImageViewBG"
        android:paddingLeft="10dp"
        android:paddingBottom="2dp"
        />


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ic_studentCall"
        android:src="@drawable/ic_no_call"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userName"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ic_studentMsg"
        android:src="@drawable/ic_no_message"
        android:layout_margin="8dp"
        android:layout_below="@+id/userName"
        android:layout_toLeftOf="@+id/ic_studentCall"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>